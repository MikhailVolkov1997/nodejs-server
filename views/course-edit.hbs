<h1>Edit course {{course.title}}</h1>

<form action="/courses/edit" method="POST">
    <div class="input-field">
        <input placeholder="Name" name='title' id="title" type="text" class="validate" required  value={{course.title}}>
        <span class="helper-text" data-error="Please enter name"></span>
    </div>
    <div class="input-field">
        <input placeholder="Price" name='price' id="price" type="text" class="validate" required value={{course.price}}>
        <span class="helper-text" data-error="Please enter price"></span>
    </div>
    <div class="input-field">
        <input placeholder="URL" name='img' id="img" type="text" class="validate" required value={{course.img}}>
        <span class="helper-text" data-error="Please download image"></span>
    </div>

    <input type='hidden' name='id' value={{course.id}} />

    <button class="btn btn-primary" type='submit'>Edit course</button>
</form>